<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!--配置一些web应用的初始化参数-->
  <context-param>
    <param-name>url</param-name>
    <param-value>jdbc:mysql://localhost:3306/mybatis</param-value>
  </context-param>

  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>com.cwlin.servlet.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getc</servlet-name>
    <servlet-class>com.cwlin.servlet.GetServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getparam</servlet-name>
    <servlet-class>com.cwlin.servlet.ServletDemo03</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>request</servlet-name>
    <servlet-class>com.cwlin.servlet.ServletDemo04</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>properties</servlet-name>
    <servlet-class>com.cwlin.servlet.ServletDemo05</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getc</servlet-name>
    <url-pattern>/getc</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getparam</servlet-name>
    <url-pattern>/getparam</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>request</servlet-name>
    <url-pattern>/request</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>properties</servlet-name>
    <url-pattern>/properties</url-pattern>
  </servlet-mapping>
</web-app>
